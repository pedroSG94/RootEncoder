<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="248dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_b2_black_round_8dp_70">

    <TextView
        android:id="@+id/tv_live_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Stream Settings"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />
    <TextView
        android:id="@+id/tv_live_settings_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RTMP URL:"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/tv_live_settings_title" />

    <LinearLayout
        android:id="@+id/ll_live_settings_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/tv_live_settings_path"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_black20_round_2dp">

        <EditText
            android:id="@+id/et_live_settings_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textColor="@color/white"
            android:hint="Please enter RTMP URL."
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@android:color/transparent"
            android:alpha="0.5"
            android:lineSpacingExtra="-0.8sp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_live_settings_path_scan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_scan_qrcode"
            android:layout_gravity="center_vertical"
            android:clickable="true" />
    </LinearLayout>

    <View
        android:id="@+id/view_live_settings_space_path"
        android:layout_below="@+id/ll_live_settings_path"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:alpha="0.2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_live_settings_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Stream Key (Optional):"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/view_live_settings_space_path" />

    <LinearLayout
        android:id="@+id/ll_live_settings_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/tv_live_settings_code"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_black20_round_2dp" >

        <EditText
            android:id="@+id/et_live_settings_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textColor="@color/white"
            android:hint="Please enter live stream key."
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@android:color/transparent"
            android:alpha="0.5"
            android:lineSpacingExtra="-0.8sp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_live_settings_code_scan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_scan_qrcode"
            android:layout_gravity="center_vertical"
            android:clickable="true" />
    </LinearLayout>

    <View
        android:id="@+id/view_live_settings_space_code"
        android:layout_below="@+id/ll_live_settings_code"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:alpha="0.2"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/ll_live_settings_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/view_live_settings_space_code"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tv_live_settings_net"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cellular Data"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:lineSpacingExtra="-0.8sp"
            android:layout_gravity="center_vertical"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/item_live_switch"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:thumb="@drawable/style_item_setting_switcher_thumb"
            android:layout_gravity="center_vertical"
            android:checked="true"
            app:showText="false"
            app:track="@drawable/style_item_setting_switcher_track" />
    </LinearLayout>
</RelativeLayout>